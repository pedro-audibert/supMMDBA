@*
    Este arquivo define o layout visual padrão para todas as páginas da aplicação.
    O conteúdo de cada página específica (como Index.cshtml) é renderizado onde @RenderBody() é chamado.
*@
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MMDBA</title>

    @* Importação de fontes e folhas de estilo (CSS) principais. *@
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mmdba.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @* Link da marca que sempre leva para a página inicial (Home/Index). *@
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">MMDBA</a>

                @* Saudação para telas pequenas, aparece fora do menu "hambúrguer". *@
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <span class="navbar-text d-sm-none ms-auto me-2">
                        Olá, <strong>@User.Identity.Name</strong>!
                    </span>
                }

                @* Botão "hambúrguer" que aparece em telas pequenas para agrupar os links de navegação. *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    @* Verifica se o usuário está autenticado para decidir o que mostrar no menu. *@
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        // Bloco de código para USUÁRIOS LOGADOS.
                        <ul class="navbar-nav flex-grow-1">
                            @if (ViewData["IsPortalPage"] as bool? != true)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="PainelSupervisao">Supervisão</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Notificações</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="PainelAlarmes">Eventos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Relatórios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">OEE</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="PainelManutencao">Manutenção</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Sistema</a>
                                </li>
                            }
                        </ul>

                        @* Seção de navegação do usuário (lado direito). *@
                        <ul class="navbar-nav">
                            <li class="nav-item d-none d-sm-block">
                                @* Link de saudação que leva para a página de gerenciamento de conta do Identity. *@
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Olá, <strong>@User.Identity.Name</strong>!</a>
                            </li>
                            <li class="nav-item">
                                @* O logout é um formulário por segurança, para evitar ataques CSRF. Ele aponta para a página de Logout do Identity. *@
                                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button type="submit" class="btn btn-link nav-link text-dark">Sair</button>
                                </form>
                            </li>
                        </ul>
                    }
                    else
                    {
                        // Bloco de código para USUÁRIOS NÃO LOGADOS (anônimos).
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Política de Privacidade</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                @* Link de login que aponta para a página de Login do Identity. *@
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="modal fade" id="modalAlerta" tabindex="-1" aria-labelledby="modalAlertaLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalAlertaLabel">Atenção</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body" id="modalAlertaCorpo">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted mt-5 py-3">
        <div class="container-fluid">
            &copy; 2025 - MMDBA - <a asp-controller="Home" asp-action="Privacy">Política de Privacidade</a>
        </div>
    </footer>

    @* Scripts JavaScript principais (jQuery e Bootstrap). *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Seção para que páginas específicas possam injetar seus próprios scripts. *@
    @await RenderSectionAsync("Scripts", required: false)

    @* Modal de confirmação para o logout. *@
    <div class="modal fade" id="confirmLogoutModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmação</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Você tem certeza que deseja sair?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" onclick="document.querySelector('form[asp-page=\'/Account/Logout\']').submit();">Sim, Sair</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>